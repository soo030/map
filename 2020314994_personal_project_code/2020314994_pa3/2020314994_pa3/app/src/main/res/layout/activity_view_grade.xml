<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ViewGradeActivity">

    <ImageView
        android:id="@+id/viewgradebg"
        app:srcCompat="@drawable/viewgradebg"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewgradetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="성적조회"
        android:fontFamily="@font/nanumsquareacr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />

    <ListView
        android:id="@+id/gradelistview"
        app:layout_constraintTop_toBottomOf="@id/viewgradebg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="30dp"
        android:background="@color/lightgreen"/>

    <TextView
        android:id="@+id/congratstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수고하셨습니다!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gradelistview"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/nanumone"
        android:textSize="21sp"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>